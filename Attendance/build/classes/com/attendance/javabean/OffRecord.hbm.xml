<?xml version="1.0" encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.attendance.javabean">
	<class name="OffRecord" table="off_record_tab">
		<id name="e_id" column="e_id"></id>
		<property name="off_num" type="string" column="off_num" />
		<property name="off_time_begin" type="string" column="off_time_begin"></property>
		<property name="off_time_end" type="string" column="off_time_end"></property>
		<property name="off_days" type="int" column="off_days"></property>
	</class>
</hibernate-mapping>  